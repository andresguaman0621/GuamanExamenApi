<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GuamanExamenApi.Views.GetMatchesPage"
             Title="GetMatchesPage">
    <StackLayout>
        <Button Text="Get UCL Matches" Clicked="Button_Clicked" />
        <ListView x:Name="MatchesListView">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout>
                            <Label Text="{Binding HomeTeam}" />
                            <Label Text="{Binding AwayTeam}" />
                            <Label Text="{Binding Date}" />
                            <!-- Agrega más etiquetas según sea necesario -->
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>